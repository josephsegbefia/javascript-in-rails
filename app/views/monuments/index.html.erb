<p style="color: green"><%= notice %></p>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <h1>Monuments</h1>

      <div id="monuments">
        <% @monuments.each do |monument| %>
          <%= render monument %>
          <p>
            <%= link_to "Show this monument", monument %>
          </p>
        <% end %>
      </div>

      <%= link_to "New monument", new_monument_path %>
    </div>
  </div>
</div>
